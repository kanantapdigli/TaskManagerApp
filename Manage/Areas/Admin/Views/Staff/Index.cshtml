@using Manage.Areas.Admin.Models.Staff
@model StaffIndexViewModel

@{
    ViewData["Title"] = "Staffs";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3">
                        <h6 class="m-0 font-weight-bold text-white">Staffs</h6>
                    </div>
                    <div class="card-body">
                        <a asp-action="add" asp-controller="staff" class="btn btn-primary mb-3">Add</a>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="main-color text-center">Fullname</th>
                                        <th class="main-color text-center">Email</th>
                                        <th class="main-color text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var staff in Model.Staffs)
                                    {
                                        <tr id="@staff.Id">
                                            <td class="text-center">@staff.Fullname</td>
                                            <td class="text-center">@staff.Email</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a asp-action="edit" asp-controller="staff" asp-route-id="@staff.Id" class="btn btn-primary ml-2">Edit</a>
                                                    <a asp-action="details" asp-controller="staff" asp-route-id="@staff.Id" class="btn btn-info ml-2">Details</a>
                                                    <a asp-action="delete" asp-controller="staff" asp-route-id="@staff.Id" onclick="return confirm('Are you sure to delete?')" class="mx-2 btn btn-danger delete-btn text-white">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



